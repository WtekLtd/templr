<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    
    <PackageId>TemplR.System.Text.Json</PackageId>
    <Description>Integration for TemplR with System.Text.Json.</Description>
    <Version>1.0.2</Version>
    <Authors>Wtek Ltd</Authors>
    <Company>Wtek Ltd</Company>
    <Copyright>Copyright 2025 Wtek Ltd</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>Variable;Enrichment;Typesafe;Serialization;Payload;Placeholder;Event;Template;Json</PackageTags>
    <RepositoryUrl>https://github.com/WtekLtd/templr.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TemplR\TemplR.csproj" />
  </ItemGroup>
</Project>
